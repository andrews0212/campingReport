<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToHeight="true" fitToWidth="true" prefViewportHeight="500" prefViewportWidth="400" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.camping2.controladores.Clientes.AñadirClienteController">
    <VBox alignment="TOP_CENTER" fillWidth="true" prefWidth="300" spacing="10">
        <Label fx:id="labelAgregar" style="-fx-font-size: 20px;" text="Añadir Nuevo Cliente" />

        <Label fx:id="labelNombre" text="Nombre" />
        <TextField fx:id="nombreField" maxWidth="200.0" promptText="Ingresa el nombre del cliente" />

        <Label fx:id="labelApellido" text="Apellido" />
        <TextField fx:id="apellidoField" maxWidth="200.0" promptText="Ingresa el apellido del cliente" />

        <Label fx:id="labelDNI" text="DNI" />
        <TextField fx:id="dniField" maxWidth="200.0" promptText="Ingresa el DNI del cliente" />

        <Label fx:id="labelEmail" text="Email" />
        <TextField fx:id="emailField" maxWidth="200.0" promptText="Ingresa el email del cliente" />

        <Label fx:id="labelTelefono" text="Teléfono" />
        <TextField fx:id="telefonoField" maxWidth="200.0" promptText="Ingresa el teléfono del cliente" />

        <Label fx:id="labelFechaNacimiento" text="Fecha de Nacimiento" />
        <DatePicker fx:id="fechaNacimientoField" />

        <Label fx:id="labelEstado" text="Estado" />
      <ComboBox fx:id="estadoCombo" prefWidth="150.0" />

        <Button fx:id="añadirClienteButton" onMouseClicked="#handleAñadirCliente" text="Añadir Cliente" />

    </VBox>
</ScrollPane>
