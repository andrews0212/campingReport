<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" fillWidth="true" prefWidth="300" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.camping2.controladores.Recursos.CrearRecursoController">
   <children>
      <Label style="-fx-font-size: 20px;" text="Añadir Nuevo Recurso" />
      <Label text="Nombre" />
      <TextField fx:id="nombreField" maxWidth="200.0" promptText="Ingresa el nombre del cliente" />
      <Label text="Tipo" />
      <ComboBox prefWidth="150.0" />
      <Label text="Capacidad" />
      <TextField fx:id="dniField" maxWidth="200.0" prefHeight="25.0" prefWidth="116.0" promptText="Ingresa el DNI del cliente" />
      <Label text="Precio" />
      <TextField fx:id="emailField" maxWidth="200.0" promptText="Ingresa el email del cliente" />
      <Label text="Minimo Personas" />
      <TextField fx:id="telefonoField" maxWidth="200.0" promptText="Ingresa el teléfono del cliente" />
      <Button fx:id="añadirClienteButton"  text="Crear Recurso" />
   </children>
</VBox>
