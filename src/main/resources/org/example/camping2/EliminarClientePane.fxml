<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.camping2.controladores.EliminarClienteController">
    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Eliminar Cliente" />

    <HBox alignment="CENTER" spacing="5">
        <Label text="ID Cliente:" />
        <TextField fx:id="idClienteTextField" promptText="Ingrese el ID del cliente" />
    </HBox>

    <Button onAction="#eliminarCliente" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Eliminar" />

    <Label fx:id="statusLabel" style="-fx-text-fill: red;" text="" />
</VBox>
